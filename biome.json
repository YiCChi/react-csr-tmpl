{
  "$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "formatter": {
    "includes": ["**/*.ts", "**/*.tsx", "**/*.json", "**/*.css"],
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "domains": {
      "project": "all",
      "react": "all",
      "test": "recommended"
    },
    "includes": ["**/*.ts", "**/*.tsx", "**/*.js"],
    "rules": {
      "recommended": true,
      "complexity": "error",
      "correctness": "error"
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    }
  }
}
